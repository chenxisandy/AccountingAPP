<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="请选择"
       android:textSize="40dp"/>

    <RadioGroup
        android:layout_marginTop="100dp"
        android:id="@+id/mood_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/happy_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="Happy"
            android:checked="true" />

        <RadioButton
            android:id="@+id/Sad_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="Sad"/>

        <RadioButton
            android:id="@+id/Excited_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="Excited"/>

        <RadioButton
            android:id="@+id/Other_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:text="Other"/>

    </RadioGroup>

    <Button
        android:id="@+id/create_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mood_group"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="70dp"
        android:text="确定"
        android:background="@color/blue" />

    <Button
        android:id="@+id/cancel_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mood_group"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/create_mood"
        android:layout_marginLeft="90dp"
        android:text="取消"
        android:background="@color/cardview_shadow_end_color"/>

</RelativeLayout>